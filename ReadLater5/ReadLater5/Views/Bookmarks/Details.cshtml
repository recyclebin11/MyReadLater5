@model Entity.Bookmark

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Category</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.URL)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.URL)
        </dd>

    </dl>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ShortDescription)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ShortDescription)
        </dd>

    </dl>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Category)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Category.Name)
        </dd>

    </dl>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.CreateDate)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.CreateDate)
        </dd>

    </dl>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.ClickCounter)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.ClickCounter)
        </dd>

    </dl>

    <dl class="dl-horizontal">
        <dt>
            Short URL
        </dt>
        <dd>
            <button id="generateShortUrlBtn" class="btn btn-primary" data-bookmark-id="@Model.ID">
                Generate Short URL
            </button>
            <div id="shortUrlResult" style="display: none; margin-top: 10px;">
                <span id="shortUrlText" class="form-control-static"></span>
            </div>
        </dd>
    </dl>

</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.ID }) |
    @Html.ActionLink("Back to List", "Index")
</p>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#generateShortUrlBtn').click(function () {
                const bookmarkId = $(this).data('bookmark-id');
                const button = $(this);

                // Show loading state
                button.prop('disabled', true).text('Generating...');

                $.ajax({
                    url: '/api/redirect/generateshorturl',
                    type: 'GET',
                    data: { id: bookmarkId },
                    success: function (response) {
                        $('#shortUrlText').text(response.shortUrl);
                        $('#shortUrlResult').show();
                        button.prop('disabled', false).text('Generate Short URL');
                    },
                    error: function (xhr, status, error) {
                        alert('Error generating short URL: ' + error);
                        button.prop('disabled', false).text('Generate Short URL');
                    }
                });
            });
        });
    </script>
